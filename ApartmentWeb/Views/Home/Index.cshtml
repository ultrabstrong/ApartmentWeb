@using ApartmentWeb.Controllers
@using rm = Resources.Website.Home
@{
    ViewBag.Title = rm.HOME;
}

@section BelowNavbar {
    <img src="~/Images/header.jpg" alt="Apartment Building" />
}

<!-- Hero section with overlay -->
<div class="position-relative rounded-3 mb-5 shadow overflow-hidden">
    <div class="hero-gradient" style="height: 240px;"></div>
    <div class="container position-absolute top-50 start-50 translate-middle text-center text-white">
        <h1 class="display-4 fw-bold mb-3">@Shared.Configuration.CompanyName</h1>
        <p class="lead mb-0 px-md-5 mx-md-5">@rm.INDEX_JUMBO_DESC</p>
    </div>
</div>

<div class="container px-0">
    <!-- Main feature section -->
    <div class="row g-0 rounded-3 shadow mb-5 overflow-hidden">
        <div class="col-md-6 p-5 d-flex flex-column justify-content-center bg-light">
            <h2 class="display-6 fw-bold mb-3 text-navy">@rm.APPLY</h2>
            <p class="lead mb-4">@rm.INDEX_APPLY_DESC</p>
            <div class="d-flex flex-wrap gap-3 align-items-center">
                <a href="@Url.Action(nameof(HomeController.Apply), HomeController.Name)" class="btn btn-lg btn-custom-blue d-flex align-items-center justify-content-center">
                    @rm.INDEX_APPLY_LINK
                </a>
                @if (Shared.Configuration.ShowDownloadApplication)
                {
                    <a href="@Url.Action(nameof(HomeController.DownloadApplication), HomeController.Name)" class="btn btn-outline-blue d-flex align-items-center justify-content-center">
                        @rm.INDEX_APPLY_OFFLINE_LINK
                    </a>
                }
            </div>
        </div>
        <div class="col-md-6 p-5 text-white hero-gradient">
            <h3 class="mb-4">Why choose us?</h3>
            <ul class="list-unstyled">
                <li class="mb-3 d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3 fs-4 text-red"></i>
                    <span>Quality housing in great locations</span>
                </li>
                <li class="mb-3 d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3 fs-4 text-red"></i>
                    <span>Responsive maintenance and support</span>
                </li>
                <li class="mb-3 d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3 fs-4 text-red"></i>
                    <span>Well-maintained properties</span>
                </li>
                <li class="d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3 fs-4 text-red"></i>
                    <span>Professional management</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <!-- Tenant Info -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow">
                <div class="card-body p-0">
                    <div class="d-flex flex-column h-100">
                        <div class="p-4 text-center bg-light-blue">
                            <i class="bi bi-info-circle-fill fs-1 mb-3 text-blue"></i>
                            <h3 class="card-title mb-0 text-navy">@rm.TENANTINFO</h3>
                        </div>
                        <div class="p-4 flex-grow-1 d-flex flex-column">
                            <p class="flex-grow-1">@rm.INDEX_TENANTINFO_DESC</p>
                            <div class="text-end mt-3">
                                <a href="@Url.Action(nameof(HomeController.TenantInfo), HomeController.Name)" class="btn btn-outline-blue">
                                    @rm.INDEX_TENANTINFO_LINK <i class="bi bi-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Maintenance Request -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow">
                <div class="card-body p-0">
                    <div class="d-flex flex-column h-100">
                        <div class="p-4 text-center bg-light-teal">
                            <i class="bi bi-tools fs-1 mb-3 text-teal"></i>
                            <h3 class="card-title mb-0 text-navy">@rm.MAINTENANCE_REQUEST</h3>
                        </div>
                        <div class="p-4 flex-grow-1 d-flex flex-column">
                            <p class="flex-grow-1">Request repairs or maintenance for your apartment quickly and easily.</p>
                            <div class="text-end mt-3">
                                <a href="@Url.Action(nameof(HomeController.MaintenanceRequest), HomeController.Name)" class="btn btn-outline-teal">
                                    Submit maintenance request <i class="bi bi-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Contact Us -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow">
                <div class="card-body p-0">
                    <div class="d-flex flex-column h-100">
                        <div class="p-4 text-center bg-light-gray">
                            <i class="bi bi-chat-dots-fill fs-1 mb-3 text-gray"></i>
                            <h3 class="card-title mb-0 text-navy">@rm.CONTACTUS</h3>
                        </div>
                        <div class="p-4 flex-grow-1 d-flex flex-column">
                            <p class="flex-grow-1">@rm.INDEX_CONTACTUS_DESC</p>
                            <div class="text-end mt-3">
                                <a href="@Url.Action(nameof(HomeController.ContactUs), HomeController.Name)" class="btn btn-outline-gray">
                                    @rm.INDEX_CONTACTUS_LINK <i class="bi bi-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>