@using ApartmentWeb.Controllers
@using rm = Resources.Website.Home
@{
    ViewBag.Title = rm.CONTACTUS;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section BelowNavbar {
    <img src="~/Images/header.jpg" alt="Apartment Building" />
}

<div class="container px-0 mt-4">
    <div class="row g-4">
        <!-- Contact Information Section -->
        <div class="col-lg-7">
            <div class="card border-0 shadow h-100">
                <div class="card-body p-0">
                    <div class="p-4 bg-light-blue text-center">
                        <i class="bi bi-building fs-1 mb-3 text-blue"></i>
                        <h3 class="card-title mb-0 text-navy">@rm.CONTACTUS</h3>
                    </div>
                    <div class="p-4">
                        <!-- Phone -->
                        <div class="d-flex align-items-center mb-4">
                            <div class="me-4 d-flex align-items-center justify-content-center rounded-circle bg-light-blue" style="width: 60px; height: 60px;">
                                <i class="bi bi-telephone-fill text-blue fs-3"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1 text-navy">@rm.CONTACTUS_INFO_DESC1</h5>
                                <p class="fs-5 mb-0">@Shared.Configuration.PhoneNumber</p>
                            </div>
                        </div>
                        
                        <!-- Email -->
                        <div class="d-flex align-items-center mb-4">
                            <div class="me-4 d-flex align-items-center justify-content-center rounded-circle bg-light-blue" style="width: 60px; height: 60px;">
                                <i class="bi bi-envelope-fill text-blue fs-3"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1 text-navy">@rm.CONTACTUS_INFO_DESC2</h5>
                                <a href="mailto:@Shared.Configuration?.EmailAddress" class="fs-5 text-blue text-decoration-none">@Shared.Configuration.EmailAddress</a>
                            </div>
                        </div>
                        
                        <!-- Address -->
                        <div class="d-flex align-items-center mb-2">
                            <div class="me-4 d-flex align-items-center justify-content-center rounded-circle bg-light-blue" style="width: 60px; height: 60px;">
                                <i class="bi bi-geo-alt-fill text-blue fs-3"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1 text-navy">@rm.CONTACTUS_INFO_DESC3</h5>
                                <p class="fs-5 mb-0">@Shared.Configuration.Address</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Business Hours Section -->
        <div class="col-lg-5">
            <div class="card border-0 shadow h-100">
                <div class="card-body p-0">
                    <div class="p-4 bg-light-gray text-center">
                        <i class="bi bi-clock fs-1 mb-3 text-gray"></i>
                        <h3 class="card-title mb-0 text-navy">Business Hours</h3>
                    </div>
                    <div class="p-4">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="fw-bold mb-2 text-navy">Monday - Saturday</h5>
                                <p class="fs-5 mb-4">8:00 AM - 5:00 PM</p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="fw-bold mb-2 text-navy">Sunday</h5>
                                <p class="fs-5 mb-4">Closed</p>
                            </div>
                        </div>
                        <p class="fst-italic text-muted">Closed on all national holidays</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>