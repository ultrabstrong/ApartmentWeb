@using ApartmentWeb.Models.Application
@using ApartmentWeb.Controllers
@model Application
@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.IsPdf != true)
{
    Layout = null; // Both are needed to ensure layout is disabled    
    @Html.Partial("~/Views/Application/_ApplicationPdf.cshtml", Model)
}
else
{
    @Html.Partial("~/Views/Application/_Application.cshtml", Model)
}
