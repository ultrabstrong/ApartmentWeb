@using ApartmentWeb.Models.Application;
@model PersonalInfo
<div class="personal-info-section">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    <div class="row mb-4">
        <!-- First Name -->
        <div class="col-md-4 mb-3 mb-md-0">
            @Html.LabelFor(model => model.FirstName, new { @class = "form-label fw-bold text-dark" })
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Enter first name" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger mt-1" })
        </div>

        <!-- Middle Name-->
        <div class="col-md-4 mb-3 mb-md-0">
            @Html.LabelFor(model => model.MiddleName, new { @class = "form-label fw-bold text-dark" })
            @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Enter middle name (optional)" } })
            @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger mt-1" })
        </div>
        
        <!-- Last Name -->
        <div class="col-md-4">
            @Html.LabelFor(model => model.LastName, new { @class = "form-label fw-bold text-dark" })
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Enter last name" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger mt-1" })
        </div>
    </div>
    
    <div class="row mb-4">
        <!-- Driver License -->
        <div class="col-md-4 mb-3 mb-md-0">
            @Html.LabelFor(model => model.DriverLicense, new { @class = "form-label fw-bold text-dark" })
            @Html.EditorFor(model => model.DriverLicense, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Enter driver's license number" } })
            @Html.ValidationMessageFor(model => model.DriverLicense, "", new { @class = "text-danger mt-1" })
        </div>
        
        <!-- DL State -->
        <div class="col-md-4 mb-3 mb-md-0">
            @Html.LabelFor(model => model.DriverLicenseStateOfIssue, new { @class = "form-label fw-bold text-dark" })
            @Html.EditorFor(model => model.DriverLicenseStateOfIssue, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Enter state (e.g., CA)" } })
            @Html.ValidationMessageFor(model => model.DriverLicenseStateOfIssue, "", new { @class = "text-danger mt-1" })
        </div>
        
        <!-- SSN -->
        <div class="col-md-4">
            @Html.LabelFor(model => model.SSN, new { @class = "form-label fw-bold text-dark" })
            @Html.EditorFor(model => model.SSN, new { htmlAttributes = new { @class = "form-control form-control-lg ssn-mask", placeholder = "Enter SSN" } }) @* Add ssn-mask class *@
            @Html.ValidationMessageFor(model => model.SSN, "", new { @class = "text-danger mt-1" })
        </div>
    </div>
    
    <div class="row">
        <!-- Phone -->
        <div class="col-md-4 mb-3 mb-md-0">
            @Html.LabelFor(model => model.PhoneNum, new { @class = "form-label fw-bold text-dark" })
            @Html.EditorFor(model => model.PhoneNum, new { htmlAttributes = new { @class = "form-control form-control-lg phone-mask", placeholder = "Enter phone number" } })
            @Html.ValidationMessageFor(model => model.PhoneNum, "", new { @class = "text-danger mt-1" })
        </div>
        
        <!-- Email -->
        <div class="col-md-8">
            @Html.LabelFor(model => model.Email, new { @class = "form-label fw-bold text-dark" })
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-lg", placeholder = "Enter email address" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger mt-1" })
        </div>
    </div>
</div>